<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AdminLoginFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/green">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:textColor="@color/black"
        android:textSize="@dimen/rsp_40"
        android:layout_marginTop="@dimen/rdp_60"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/email"
        android:layout_height="@dimen/rdp_40"
        android:layout_width="@dimen/rdp_280"
        android:background="@drawable/edittext"
        android:singleLine="true"
        android:layout_marginTop="@dimen/rdp_40"
        android:hint="Email Adress"
        android:paddingStart="@dimen/rdp_20"
        />

    <com.google.android.material.textfield.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rdp_20"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/password"
            android:layout_height="@dimen/rdp_40"
            android:layout_width="@dimen/rdp_280"
            android:singleLine="true"
            android:background="@drawable/edittext"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/rdp_20"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/createlogin"
        android:layout_width="@dimen/rdp_120"
        android:layout_height="@dimen/rdp_40"
        android:layout_marginTop="@dimen/rdp_60"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/button"/>

</LinearLayout>
