<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listText"
        android:layout_width="@dimen/rdp_299"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/rdp_20"
        android:text="hey how are you"
        android:textColor="@color/black"
        android:textSize="@dimen/rsp_15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/rdp_50"
        android:layout_alignBottom="@+id/listText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/rdp_10"
        android:text="Set"
        android:textSize="@dimen/rsp_15" />

</LinearLayout>